<div class="container container-login">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			<h3><strong>LOGIN</strong></h3>
			<%= form_for login_path, :method => 'post', :class => 'form-control' do %>
				<div class="form-group">
					<label for="username">Username</label>
					<input type="text" class="form-control" id="username" name="login[username]" autocomplete="off">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" class="form-control" id="password" name="login[password]" autocomplete="off">
				</div>
				<% if @error %>
				<div class="alert alert-danger">
					<p><strong>Error!</strong> <%= @error %></p>
				</div>
				<% end %>
				<div class="text-center">
					<button class="btn btn-primary">Login</button>
				</div>
			<% end %>
		</div>
	</div>
</div>